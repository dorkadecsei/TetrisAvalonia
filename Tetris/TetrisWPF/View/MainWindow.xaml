<Window x:Class="TetrisWPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisWPF"
        xmlns:vm="clr-namespace:TetrisWPF.ViewModel"
        mc:Ignorable="d"
        Title="Tetris" Height="600" Width="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <vm:IntToColorConverter x:Key="IntToColorConverter"/>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Left" Command="{Binding MoveLeftCommand}"/>
        <KeyBinding Key="Right" Command="{Binding MoveRightCommand}"/>
        <KeyBinding Key="Up" Command="{Binding RotateCommand}"/>
        <KeyBinding Key="Down" Command="{Binding MoveDownCommand}"/>
        <KeyBinding Key="Space" Command="{Binding DropCommand}"/>
        <KeyBinding Key="P" Command="{Binding PauseCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveGameCommand}"/>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding LoadGameCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Fájl">
                <MenuItem Header="Új játék">
                    <MenuItem Header="4 x 16" Command="{Binding NewGameCommand}" CommandParameter="4x16"/>
                    <MenuItem Header="8 x 16" Command="{Binding NewGameCommand}" CommandParameter="8x16"/>
                    <MenuItem Header="12 x 16" Command="{Binding NewGameCommand}" CommandParameter="12x16"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Betöltés..." Command="{Binding LoadGameCommand}"/>
                <MenuItem Header="Mentés..." Command="{Binding SaveGameCommand}"/>
                <Separator/>
                <MenuItem Header="Kilépés" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="Játék">
                <MenuItem Header="Szünet" Command="{Binding PauseCommand}"/>
            </MenuItem>
        </Menu>

        <Viewbox Grid.Row="1" Margin="20">
            <Border BorderBrush="Black" BorderThickness="2">
                <ItemsControl ItemsSource="{Binding Fields}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="{Binding TableHeight}" Columns="{Binding TableWidth}"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="0.5">
                                <Rectangle Width="25" Height="25" 
                                           Fill="{Binding Color, Converter={StaticResource IntToColorConverter}}"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Viewbox>

        <Border Grid.Row="1" Background="#AA000000" Visibility="{Binding IsGamePaused, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="PAUSED" Foreground="White" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </Border>

        <Border Grid.Row="1" Background="#CCF04D4D" Visibility="{Binding IsGameOver, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="GAME OVER" Foreground="White" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding GameTime, StringFormat='time: {0}'}" Foreground="White" FontSize="24" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding GameTime, StringFormat='Idő: {0}'}" FontWeight="Bold"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding LinesCleared, StringFormat='Sorok: {0}'}" FontWeight="Bold"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="Nyilak: Mozgás | Space: Dobás | P: Szünet" FontSize="11" Foreground="Gray"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>